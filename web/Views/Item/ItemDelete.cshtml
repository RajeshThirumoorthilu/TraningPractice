@model Item

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Item</h2>
    </div>

    <form id="employeeformid" method="post">
        <div asp-validation-summary="All"></div>
        @*<a asp-route-id="@Model.ItemCategoryId" hidden/>*@
        <input asp-for="ItemId" hidden />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ItemName">Item Name</label> <span>*</span>
                <input type="text" id="ItemName" class="form-control mb-3" asp-for="ItemName" placeholder="Enter Item Name" value="@Model.ItemName" disabled>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ItemDescription">Item Category Description</label> <span>*</span>
                <input type="text" id="ItemDescription" class="form-control mb-3" asp-for="ItemDescription" placeholder="Enter Item Category Description" value="@Model.ItemDescription" disabled>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ItemDescription">Item Category Name</label> <span>*</span>
                @if (Model.ItemId == 0)
                {
                    <select asp-for="ItemCategoryId" class="form-select" asp-items="Model.ItemCategorydropdown" disabled>
                        <option disabled selected>--Select--</option>
                    </select>
                }
                else
                {
                    <select asp-for="ItemCategoryId" class="form-select" asp-items="Model.ItemCategorydropdown">
                        <option disabled>--Select--</option>
                    </select>
                }

            </div>
        </div>
        <button asp-action="DeleteItem" asp-route-id="@Model.ItemId" asp-controller="Item" title="Delete" class="btn btn-lg btn-primary p-2 bi bi-pencil-square" name="Delete">Delete</button>
        <a asp-controller="Item" asp-action="Index" class="btn btn-lg btn-warning p-2 btnback"><i class="bi bi-pencil-square"></i> Back </a>
    </form>

</div>
